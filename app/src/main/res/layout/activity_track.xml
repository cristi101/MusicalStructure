<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Artist">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/picture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/gap"
                android:layout_weight="0"
                android:adjustViewBounds="true"
                android:background="@color/frame"
                android:contentDescription="@string/album_picture_desc"
                android:padding="@dimen/gap"
                android:scaleType="centerCrop"
                android:src="@drawable/spotify_icon_green"
                tools:src="@drawable/cleopatra" />

            <TextView
                android:id="@+id/name"
                style="@style/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:gravity="center"
                tools:text="Song name" />

            <LinearLayout
                android:id="@+id/player"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                tools:visibility="visible">

                <ToggleButton
                    android:id="@+id/play"
                    style="@style/toggle"
                    android:button="@drawable/play" />

                <ToggleButton
                    android:id="@+id/stop"
                    style="@style/toggle"
                    android:button="@drawable/stop" />

                <ToggleButton
                    android:id="@+id/pause"
                    style="@style/toggle"
                    android:button="@drawable/pause" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true" />
</FrameLayout>